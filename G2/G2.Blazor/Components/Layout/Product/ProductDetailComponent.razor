@using G2.Blazor.Components.Layout.ProsCons
@using G2.Blazor.Components.Layout.UserSatisfaction
@using G2.Blazor.Components.Layout.Rate

<article class="shadow pb-10">
    <img src="@ProductDetail.CoverImage"
         alt="@ProductDetail.Name"
         class="w-full h-[150px]" />
    <div class="mx-6">
        <div class="flex justify-between mt-6">
            <div class="">
                <strong class="text-3xl">@ProductDetail.Name</strong>
                <p class="text-indigo-400 mt-2">@ProductDetail.CategoryName</p>
                <RateComponent Rate="@ProductDetail.Rate"/>
            </div>
            <div class="flex">
                <button class="flex items-center text-white bg-indigo-400 py-2 px-3 h-fit rounded-md">
                    <svg xmlns="http://www.w3.org/2000/svg"
                         fill="none"
                         viewBox="0 0 24 24"
                         stroke-width="1.5"
                         stroke="currentColor"
                         class="size-5">
                        <path stroke-linecap="round"
                              stroke-linejoin="round"
                              d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
                    </svg>
                    <span class="ml-2">Save</span>
                </button>
                <!-- <button
                  class="flex items-center text-indigo-400 border border-indigo-400 py-2 px-3 h-fit rounded-md">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-5">
                    <path
                      d="m11.645 20.91-.007-.003-.022-.012a15.247 15.247 0 0 1-.383-.218 25.18 25.18 0 0 1-4.244-3.17C4.688 15.36 2.25 12.174 2.25 8.25 2.25 5.322 4.714 3 7.688 3A5.5 5.5 0 0 1 12 5.052 5.5 5.5 0 0 1 16.313 3c2.973 0 5.437 2.322 5.437 5.25 0 3.925-2.438 7.111-4.739 9.256a25.175 25.175 0 0 1-4.244 3.17 15.247 15.247 0 0 1-.383.219l-.022.012-.007.004-.003.001a.752.752 0 0 1-.704 0l-.003-.001Z" />
                  </svg>
                  <span class="ml-2 text-indigo-400">Save</span>
                </button> -->
                <button class="ml-4 border border-indigo-400 py-2 px-3 h-fit rounded-md text-indigo-400">
                    <a href="@ProductDetail.Link" target="_blank">Visit website</a>
                </button>
            </div>
        </div>
        <div class="mt-8">
            <strong class="text-xl">Description</strong>
            <p>
                @ProductDetail.Description
            </p>
        </div>
        <div class="mt-10">
            <strong class="text-xl">Cacoo Pros and Cons</strong>
            <div class="flex mt-2">
                <div class="flex-1 mr-4">
                    <div class="flex">
                        <div class="border-8 border-b-green-300 border-t-transparent border-l-transparent border-r-transparent -translate-y-1/3"></div>
                        <h3 class="ml-2">Pros</h3>
                    </div>
                    <ProsConsListComponent>
                        @foreach (ProsCons pros in ProductDetail.ProsList)
                        {
                            <ProsConsItemComponent @key=@($"pros-{pros.Id}") ProsConsValue="pros" />
                        }
                    </ProsConsListComponent>
                </div>
                <div class="flex-1 ml-4">
                    <div class="flex">
                        <div class="border-8 border-t-red-300 border-b-transparent border-l-transparent border-r-transparent translate-y-1/3"></div>
                        <h3 class="ml-2">Pros</h3>
                    </div>
                    <ProsConsListComponent>
                        @foreach (ProsCons cons in ProductDetail.ConsList)
                        {
                            <ProsConsItemComponent @key=@($"cons-{cons.Id}") ProsConsValue="cons" />
                        }
                    </ProsConsListComponent>
                </div>
            </div>
        </div>
        <div class="mt-10">
            <strong>User Satisfaction</strong>
            <UserSatisfactionListComponent>
                @foreach (UserSatisfaction userSatisfaction in ProductDetail.UserSatisfactionList)
                {
                    <UserSatisfactionItemComponent @key=@($"userSatisfaction-{userSatisfaction.Id}") UserSatisfaction="userSatisfaction" />
                }
            </UserSatisfactionListComponent>
        </div>
        <button class="bg-indigo-400 text-white p-2 mt-8 rounded-md relative left-1/2 -translate-x-2/4">
            <a href="@ProductDetail.Link" target="_blank">More information</a>
        </button>
    </div>
</article>

@code {
    [Parameter]
    public ProductDetail ProductDetail { set; get; }
}
