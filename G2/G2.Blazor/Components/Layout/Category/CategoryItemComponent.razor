<a href="@Link" class="flex text-sm mb-5">
    <h5 class="text-indigo-400">@Name</h5>
    <h5 class="pl-1">(@Quantity)</h5>
</a>

@code {
    [Parameter, EditorRequired]
    public string Name { set; get; }

    [Parameter, EditorRequired]
    public int Quantity { set; get; }

    [Parameter, EditorRequired]
    public string Link { set; get; }
}
